{
  "extends": "@vivid/typescript-config/react-library.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/server.ts",
    "scheduler.js"
  ],
  "exclude": ["node_modules"]
}
